---
// Skeleton screen for leaderboard loading state
---

<div class="animate-pulse">
  <!-- Podium Skeleton -->
  <div class="flex justify-center items-end space-x-8 mb-16">
    <!-- Second Place -->
    <div class="bg-gray-100 rounded-lg p-6 w-40 h-48 flex flex-col items-center justify-between skeleton-shimmer">
      <div class="text-center w-full">
        <div class="w-16 h-16 bg-gray-200 rounded-full mx-auto mb-2"></div>
        <div class="h-4 bg-gray-200 rounded w-3/4 mx-auto mb-2"></div>
        <div class="h-3 bg-gray-200 rounded w-1/2 mx-auto mb-2"></div>
        <div class="h-6 bg-gray-200 rounded w-16 mx-auto mt-2"></div>
      </div>
      <div class="w-8 h-8 bg-gray-200 rounded-full"></div>
    </div>
    
    <!-- First Place -->
    <div class="bg-yellow-100 rounded-lg p-6 w-40 h-56 flex flex-col items-center justify-between border-4 border-yellow-200 skeleton-shimmer">
      <div class="text-center w-full">
        <div class="w-20 h-20 bg-gray-200 rounded-full mx-auto mb-2 border-2 border-yellow-200"></div>
        <div class="h-4 bg-gray-200 rounded w-3/4 mx-auto mb-2"></div>
        <div class="h-3 bg-gray-200 rounded w-1/2 mx-auto mb-2"></div>
        <div class="h-8 bg-gray-200 rounded w-20 mx-auto mt-2"></div>
      </div>
      <div class="w-10 h-10 bg-gray-200 rounded-full"></div>
    </div>
    
    <!-- Third Place -->
    <div class="bg-orange-100 rounded-lg p-6 w-40 h-44 flex flex-col items-center justify-between skeleton-shimmer">
      <div class="text-center w-full">
        <div class="w-14 h-14 bg-gray-200 rounded-full mx-auto mb-2"></div>
        <div class="h-4 bg-gray-200 rounded w-3/4 mx-auto mb-2"></div>
        <div class="h-3 bg-gray-200 rounded w-1/2 mx-auto mb-2"></div>
        <div class="h-6 bg-gray-200 rounded w-16 mx-auto mt-2"></div>
      </div>
      <div class="w-8 h-8 bg-gray-200 rounded-full"></div>
    </div>
  </div>

  <!-- Table Skeleton -->
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="px-6 py-4 bg-green-600">
      <div class="h-6 bg-green-500 rounded w-32"></div>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left"><div class="h-3 bg-gray-200 rounded w-12"></div></th>
            <th class="px-6 py-3 text-left"><div class="h-3 bg-gray-200 rounded w-24"></div></th>
            <th class="px-6 py-3 text-left"><div class="h-3 bg-gray-200 rounded w-16"></div></th>
            <th class="px-6 py-3 text-left"><div class="h-3 bg-gray-200 rounded w-20"></div></th>
            <th class="px-6 py-3 text-left"><div class="h-3 bg-gray-200 rounded w-24"></div></th>
            <th class="px-6 py-3 text-left"><div class="h-3 bg-gray-200 rounded w-16"></div></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {Array.from({length: 8}).map(() => (
            <tr class="skeleton-shimmer">
              <td class="px-6 py-4">
                <div class="h-4 bg-gray-200 rounded w-8"></div>
              </td>
              <td class="px-6 py-4">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-gray-200 rounded-full mr-3"></div>
                  <div class="h-4 bg-gray-200 rounded w-32"></div>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="h-4 bg-gray-200 rounded w-24"></div>
              </td>
              <td class="px-6 py-4">
                <div class="h-4 bg-gray-200 rounded w-12"></div>
              </td>
              <td class="px-6 py-4">
                <div class="h-4 bg-gray-200 rounded w-12"></div>
              </td>
              <td class="px-6 py-4">
                <div class="h-6 bg-gray-200 rounded w-8"></div>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</div>
