---
// Skeleton screen for registration form loading state
---

<div class="animate-pulse">
  <!-- User Avatar Skeleton -->
  <div class="flex items-center mb-6 p-4 bg-gray-800 border border-green-700 rounded-lg skeleton-shimmer">
    <div class="h-16 w-16 bg-gray-700 rounded-full mr-4"></div>
    <div class="flex-1">
      <div class="h-6 bg-gray-700 rounded w-32 mb-2"></div>
      <div class="h-4 bg-gray-700 rounded w-24"></div>
    </div>
  </div>

  <!-- Form Fields Skeleton -->
  <div class="space-y-6">
    {Array.from({length: 5}).map(() => (
      <div class="skeleton-shimmer">
        <div class="h-4 bg-gray-700 rounded w-24 mb-2"></div>
        <div class="h-10 bg-gray-800 border border-green-600 rounded-md"></div>
      </div>
    ))}
    
    <!-- Submit Button Skeleton -->
    <div class="pt-4">
      <div class="h-12 bg-gray-700 rounded-md skeleton-shimmer"></div>
    </div>
  </div>
</div>
