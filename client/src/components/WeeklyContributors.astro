---
import { Icon } from 'astro-icon/components';

// This component will be rendered server-side
// Data will be fetched from the API endpoint
---

<section class="py-20 border-t border-gray-800/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-block mb-4">
        <span class="bg-gradient-to-r from-green-500 to-lime-400 text-black px-4 py-2 text-sm font-semibold uppercase tracking-wide rounded-lg">
          This Week's Champions
        </span>
      </div>
      <h2 class="text-4xl md:text-5xl font-black mb-4 bg-gradient-to-r from-green-400 to-lime-300 bg-clip-text text-transparent">
        Top Weekly Contributors
      </h2>
      <p class="text-gray-400 text-lg font-mono">
        Celebrating our most active contributors from the past 7 days
      </p>
    </div>

    <!-- Loading State -->
    <div id="weekly-loading" class="flex justify-center items-end gap-6 min-h-[400px]">
      <div class="flex flex-col items-center gap-4 animate-pulse">
        <div class="w-32 h-32 rounded-full bg-gray-700/50"></div>
        <div class="h-4 bg-gray-700/50 rounded w-24"></div>
        <div class="h-3 bg-gray-700/50 rounded w-16"></div>
      </div>
      <div class="flex flex-col items-center gap-4 animate-pulse">
        <div class="w-40 h-40 rounded-full bg-gray-700/50"></div>
        <div class="h-5 bg-gray-700/50 rounded w-32"></div>
        <div class="h-4 bg-gray-700/50 rounded w-20"></div>
      </div>
      <div class="flex flex-col items-center gap-4 animate-pulse">
        <div class="w-32 h-32 rounded-full bg-gray-700/50"></div>
        <div class="h-4 bg-gray-700/50 rounded w-24"></div>
        <div class="h-3 bg-gray-700/50 rounded w-16"></div>
      </div>
    </div>

    <!-- Error State -->
    <div id="weekly-error" class="hidden text-center py-12">
      <div class="w-20 h-20 bg-gradient-to-r from-gray-800/50 to-gray-700/50 border border-gray-600 rounded-full flex items-center justify-center mx-auto mb-6">
        <Icon name="heroicons:exclamation-triangle" class="w-10 h-10 text-green-400" />
      </div>
      <h4 class="text-xl font-bold text-white mb-3 font-mono">Leaderboard Refreshing...</h4>
      <p class="text-green-300 font-mono">Check back soon to see this week's top contributors!</p>
    </div>

    <!-- Contributors Podium -->
    <div id="weekly-podium" class="hidden">
      <div class="flex justify-center items-end gap-4 md:gap-8 flex-wrap md:flex-nowrap">
        <!-- 2nd Place -->
        <div id="contributor-2" class="contributor-card scale-90 translate-y-4 opacity-0" style="animation-delay: 0.1s">
          <!-- Will be populated by JavaScript -->
        </div>

        <!-- 1st Place -->
        <div id="contributor-1" class="contributor-card scale-110 opacity-0" style="animation-delay: 0s">
          <!-- Will be populated by JavaScript -->
        </div>

        <!-- 3rd Place -->
        <div id="contributor-3" class="contributor-card scale-90 translate-y-4 opacity-0" style="animation-delay: 0.2s">
          <!-- Will be populated by JavaScript -->
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const API_BASE = import.meta.env.PUBLIC_API_BASE_URL || 'http://localhost:4000';

  interface Contributor {
    username: string;
    avatar: string;
    displayName?: string;
    count: number;
  }

  interface WeeklyData {
    contributors: Contributor[];
    weekStart?: string;
    weekEnd?: string;
  }

  const rankConfig = {
    1: {
      borderColor: 'border-green-400',
      glowColor: 'shadow-green-500/50',
      icon: 'heroicons:trophy',
      iconColor: 'text-yellow-400',
      bgGradient: 'from-green-600/20 to-lime-600/20',
      label: '1st Place',
      scale: 'w-40 h-40'
    },
    2: {
      borderColor: 'border-gray-300',
      glowColor: 'shadow-gray-400/50',
      icon: 'heroicons:star',
      iconColor: 'text-gray-300',
      bgGradient: 'from-gray-600/20 to-gray-500/20',
      label: '2nd Place',
      scale: 'w-32 h-32'
    },
    3: {
      borderColor: 'border-amber-500',
      glowColor: 'shadow-amber-500/50',
      icon: 'heroicons:star',
      iconColor: 'text-amber-500',
      bgGradient: 'from-amber-600/20 to-orange-600/20',
      label: '3rd Place',
      scale: 'w-32 h-32'
    }
  };

  function createContributorCard(contributor: Contributor, rank: 1 | 2 | 3): string {
    const config = rankConfig[rank];
    
    return `
      <div class="bg-gradient-to-br from-gray-900/80 to-gray-800/80 backdrop-blur-sm rounded-2xl p-6 border-2 ${config.borderColor} shadow-xl ${config.glowColor} hover:scale-105 transition-all duration-300 w-full max-w-xs">
        <!-- Rank Badge -->
        <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-gradient-to-r ${config.bgGradient} border-2 ${config.borderColor} rounded-full px-4 py-1 flex items-center gap-2">
          <svg class="${config.iconColor} w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            ${rank === 1 
              ? '<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />'
              : '<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />'
            }
          </svg>
          <span class="text-white font-bold text-sm font-mono">${config.label}</span>
        </div>

        <!-- Avatar -->
        <div class="flex justify-center mt-4 mb-4">
          <a href="/profile/${contributor.username}" class="relative group">
            <img 
              src="${contributor.avatar}" 
              alt="${contributor.username}"
              class="${config.scale} rounded-full border-4 ${config.borderColor} shadow-2xl group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
            ${rank === 1 ? '<div class="absolute -top-2 -right-2 text-4xl animate-bounce">ðŸ‘‘</div>' : ''}
          </a>
        </div>

        <!-- User Info -->
        <div class="text-center">
          <a href="/profile/${contributor.username}" class="block">
            <h3 class="text-xl font-bold text-white font-mono mb-1 hover:text-green-400 transition-colors truncate">
              ${contributor.displayName || contributor.username}
            </h3>
            <p class="text-sm text-gray-400 font-mono mb-3">@${contributor.username}</p>
          </a>
          
          <!-- Contribution Count -->
          <div class="bg-gradient-to-r ${config.bgGradient} border ${config.borderColor} rounded-xl p-3 mt-4">
            <div class="flex items-center justify-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span class="text-2xl font-black text-green-400 font-mono">${contributor.count}</span>
            </div>
            <p class="text-xs text-gray-300 font-mono mt-1">PRs this week</p>
          </div>

          <!-- GitHub Link -->
          <a 
            href="https://github.com/${contributor.username}" 
            target="_blank"
            class="inline-flex items-center gap-2 mt-4 text-sm text-green-400 hover:text-green-300 transition-colors font-mono"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View Profile
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      </div>
    `;
  }

  async function loadWeeklyContributors() {
    const loadingEl = document.getElementById('weekly-loading');
    const errorEl = document.getElementById('weekly-error');
    const podiumEl = document.getElementById('weekly-podium');

    try {
      const response = await fetch(`${API_BASE}/api/top-contributors`);
      
      if (!response.ok) {
        throw new Error('Failed to fetch weekly contributors');
      }

      const data: WeeklyData = await response.json();

      if (!data.contributors || data.contributors.length === 0) {
        throw new Error('No contributors data available');
      }

      // Hide loading, show podium
      loadingEl?.classList.add('hidden');
      podiumEl?.classList.remove('hidden');

      // Populate each contributor card
      data.contributors.slice(0, 3).forEach((contributor, index) => {
        const rank = index === 0 ? 1 : index === 1 ? 2 : 3;
        const cardEl = document.getElementById(`contributor-${rank}`);
        if (cardEl) {
          cardEl.innerHTML = createContributorCard(contributor, rank as 1 | 2 | 3);
          // Trigger fade-in animation
          setTimeout(() => {
            cardEl.classList.add('animate-fade-in-up');
          }, 100);
        }
      });

    } catch (error) {
      console.error('Error loading weekly contributors:', error);
      loadingEl?.classList.add('hidden');
      errorEl?.classList.remove('hidden');
    }
  }

  // Load contributors on page load
  loadWeeklyContributors();
</script>

<style>
  .contributor-card {
    position: relative;
    transition: all 0.3s ease;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
  }

  /* Glow effect on hover */
  .contributor-card:hover {
    filter: brightness(1.1);
  }
</style>
