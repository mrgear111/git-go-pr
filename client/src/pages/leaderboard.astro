        '</div>' +
      '</a>' +
      // Third Place
      '<a href="/profile/' + leaderboard[2]?.username + '" class="block bg-gradient-to-br from-gray-800/80 to-gray-700/80 border-2 border-orange-600 rounded-2xl p-6 w-48 h-52 flex flex-col items-center justify-between backdrop-blur-sm shadow-xl transform hover:scale-105 transition-all duration-300 cursor-pointer">' +
        '<div class="text-center">' +
          '<div class="relative mb-3">' +
