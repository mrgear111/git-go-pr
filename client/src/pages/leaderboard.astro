          <!-- Table -->
          <div class="overflow-x-auto">
            <table class="min-w-full">
              <thead class="bg-gradient-to-r from-gray-800/80 to-gray-700/80 backdrop-blur-sm">
                <tr class="border-b-2 border-green-500/30">
                  <th class="px-6 py-5 text-left text-xs font-black text-green-400 uppercase tracking-wider">Rank</th>
                  <th class="px-6 py-5 text-left text-xs font-black text-green-400 uppercase tracking-wider">Contributor</th>
                  <th class="px-6 py-5 text-left text-xs font-black text-green-400 uppercase tracking-wider">GitHub</th>
                  <th class="px-6 py-5 text-left text-xs font-black text-green-400 uppercase tracking-wider">Total PRs</th>
                  <th class="px-6 py-5 text-left text-xs font-black text-green-400 uppercase tracking-wider">Merged PRs</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-green-400 uppercase tracking-wider">Badge</th>
                </tr>
              </thead>
